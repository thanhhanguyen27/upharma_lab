<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="medicine"
            type="com.example.upharma_app.model.ProductInfo" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="220sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/upharma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/tvTitleMedicine"
            android:layout_marginLeft="16sp"
            style="@style/textview_medicine_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viên ngậm ho "
            android:gravity="start"/>
        <TextView
            android:layout_marginTop="3sp"
            android:layout_marginLeft="16sp"
            android:id="@+id/tvTypeMedicine"
            android:text="Mắt - mũi - tai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="16sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red"
                android:text="20.000"
                android:textSize="18sp"
                android:layout_marginTop="2sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice"/>
            <TextView
                android:textColor="@color/red"
                android:layout_marginTop="2sp"
                android:text="đ/ hộp"
                android:layout_marginLeft="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>