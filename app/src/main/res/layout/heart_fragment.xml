<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".ui.fragment.health.HeartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:textColor="@color/text_gray_black"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="8sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiện tại"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="20sp"
            android:text="Kết nối với máy"
            android:layout_marginRight="16sp"
            android:textStyle="italic"
            android:textColor="@color/green_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/tvTime"
            android:layout_marginLeft="16sp"
            android:text="01/01/2021 04:13"
            android:textColor="@color/text_gray_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageHeart"
            android:layout_marginTop="20sp"
            android:layout_width="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="150sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/heart"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="3sp"
            android:textColor="@color/text_gray_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bmp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/text_gray_black"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvNote"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú thêm:"
            android:layout_marginLeft="16sp"
            android:textColor="@color/text_gray_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTime"/>

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/border_stroke"
            android:textSize="16sp"
            android:hint="Nhập thêm ghi chú"
            android:layout_marginRight="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageHeart"
            app:layout_constraintTop_toBottomOf="@+id/tvNote" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
    </ScrollView>
</layout>